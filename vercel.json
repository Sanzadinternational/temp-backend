{
  "builds": [
    {
      "src": "./index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*"],   // optional: include your other files
        "tscOptions": {
          "noEmitOnError": false        // ✅ allow JS emit even if TS errors exist
        }
      }
    }
  ],
  "buildCommand": "tsc --noEmitOnError false",  // ✅ tell Vercel to ignore TS errors
  "routes": [
    {
      "src": "/(.*)",
      "dest": "index.ts"
    }
  ]
}
